<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="main.css" media="screen" charset="utf-8">
    <title></title>
  </head>
  <body>
    Posts index
    <a href="/users/logout">Logout</a>
    <a href="/posts/create">Create new post</a>
    <%posts.forEach(function(post){%>
      <h1><a href="/posts/<%=post._id%>"><%=post.title%></a></h1>
      <p>
        <%=post.body%>
      </p>
      <p>
        Author: <a href="/users/<%=post.author[0]._id%>"><%=post.author[0].username%></a>
      </p>
      <p>
        Date: <%=post.date%>
      </p>
    <%})%>
  </body>
</html>
